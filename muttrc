source "$HOME/.mutt/gmail" ## With informations on my account

set sort='threads'         # sort by threads
set nobeep                 # be quiet, minion, your beeping annoys me
set fast_reply
set smart_wrap
set nomarkers
set pager_context = 3      # show status in the pager
set delete = ask-yes
set print = ask-yes
set sort_aux = date-received
set nostrict_threads
set quote_regexp="^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/enriched text/plain text/html 

#My Editor
set editor='vim + -c "set textwidth=78" -c "set wrap" -c "set nocp" -c "?^$"' 

#Local Folders
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies 
set certificate_file =~/.mutt/certificates 

#Special Keybindings 
bind editor <space> noop
macro index,pager d "<save-message>+[Gmail]/Archived<enter>" "Move to archive"
macro index gi "=INBOX" "Go to inbox" 
macro index gs "=[Gmail]/Messages envoy√©s" "Go to Sent Mail" 
macro index gd "=[Gmail]/Brouillons" "Go to drafts" 

#Mutt Session Security 
set move = no #Stop asking to "move read messages to mbox"! 
set imap_keepalive = 900 

# Colors 
color hdrdefault blue default 
color attachment brightyellow default 
color header brightblue default "From: " 
color header brightblue default "Subject: " 
color header brightblue default "Date: " 
color quoted green default 
color quoted1 cyan default 
color quoted2 green default 
color quoted3 cyan default 
color error red default # error messages 
color message white default # message informational messages 
color indicator brightwhite blue # indicator for the "current message" 
color status green default# status lines in the folder index sed for the mini-help line 
color tree brightgreen default # the "tree" display of threads within the folder index 
color search brightgreen default # search matches found with search within the internal pager 
color markers black default # The markers indicate a wrapped line 
color index yellow default '~O' 
color index brightyellow default '~N'
color index brightred default '~F' # Flagged Messages are important! 
color index blue default '~D' # Deleted Mails - use dark color as these are already "dealt with"

# identifies email addresses 
color body brightred black [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+

# identifies URLs 
color body brightblue black (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+


# Open URLs
#macro pager \cu |urlview\n

source "$HOME/.mutt/aliases"
